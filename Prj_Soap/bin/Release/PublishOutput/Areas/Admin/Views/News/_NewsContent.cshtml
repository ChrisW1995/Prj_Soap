<div class="box box-default">
    <div class="box-header with-border">
        <h3 class="box-title">預覽/編輯</h3>

        <div class="box-tools pull-right">
            <button type="button" class="btn btn-box-tool" data-widget="collapse">
                <i class="fa fa-minus"></i>
            </button>
            <button type="button" class="btn btn-box-tool" data-widget="remove"><i class="fa fa-times"></i></button>
        </div>
    </div>
    <!-- /.box-header -->
@using (Html.BeginForm("UpdateNews", "News", FormMethod.Post))
{
    <div class="box-body">


        <div class="form-group">
            <label>標題</label>  
            <input type="hidden" id="news-id" name="Id">
            <input type="text" name="Title" id="txt-update-title" class="form-control" placeholder="公告標題 ...">
    
        </div>
        <div class="form-group">
            <label>公告日期</label>
            <p style="font-size: 16px;" id="txt-news-date"></p>
        </div>

        <div class="form-group">
            <label>內容</label>
            <textarea class="form-control"name="Content" id="txt-update-content" rows="3" placeholder="公告內容 ..."></textarea>
        </div>


        <!-- /.row -->
    </div>
    <!-- /.box-body -->
    <div class="box-footer">
        <button type="submit" id="btn-update" class="btn btn-warning">修改</button>
    </div>
}
</div>


