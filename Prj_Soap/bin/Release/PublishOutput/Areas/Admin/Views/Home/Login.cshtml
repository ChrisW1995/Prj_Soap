
@{
    ViewBag.Title = "登入";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLoginLayout.cshtml";
}
@using (Html.BeginForm("Login", "Home", FormMethod.Post, new { @class = "login100-form validate-form flex-sb flex-w" }))
{

    <span class="login100-form-title p-b-32" style="font-family:'Microsoft JhengHei'">
        後台登入
    </span>

    <div style="color:red; margin-bottom:10px; border:0;" class="wrap-input100 validate-input m-b-36">
        @TempData["loginFail"]
        <span class="focus-input100"></span>
    </div>

    <span class="txt1 p-b-11">
        登入帳號
    </span>
    <div class="wrap-input100 validate-input m-b-36" data-validate="請輸入帳號">
        <input class="input100" type="text" name="Account">
        <span class="focus-input100"></span>
    </div>

    <span class="txt1 p-b-11">
        登入密碼
    </span>
    <div class="wrap-input100 validate-input m-b-12" data-validate="請輸入密碼">
        <span class="btn-show-pass">
            <i class="fa fa-eye"></i>
        </span>
        <input class="input100" type="password" name="Password">
        <span class="focus-input100"></span>
    </div>

    <div class="flex-sb-m w-full p-b-48">
    </div>

    <div class="container-login100-form-btn">
        <button class="login100-form-btn">
            登入
        </button>
    </div>

}

