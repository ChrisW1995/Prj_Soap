@using PagedList
@using PagedList.Mvc
@model IPagedList<Prj_Soap.Models.ViewModels.OrderHistoryViewModel>

<div class="box box-danger">
    <div class="box-header with-border">
        <h3 class="box-title">訂單維護</h3>

        <div class="box-tools pull-right">
            <button type="button" class="btn btn-box-tool" data-widget="collapse">
                <i class="fa fa-minus"></i>
            </button>
            <button type="button" class="btn btn-box-tool" data-widget="remove"><i class="fa fa-times"></i></button>
        </div>
    </div>
    <!-- /.box-header -->
    <div class="box-body table-responsive">
        <div class="">

            <div class="col-md-12">
                <table class="table table-striped table-bordered table-hover">
                    <tr>
                        <th style="width:15%;">訂單編號</th>

                        <th style="width:7%;">狀態</th>
                        <th style="width:8%;">總金額</th>
                        <th style="width:20%;">訂單時間</th>
                        <th style="width:20%;">最後更新時間</th>
                        <th></th>
                    </tr>
                    @if(Model.Count == 0)
                    {
                        <tr>
                            <td colspan="4">目前尚無訂單</td>
                        </tr>
                    }
                    else
                    {
                        foreach (var item in Model)
                        {
                        <tr>
                            <td><a class="order-link" href="#">@item.OrderId</a></td>
                            <td>@item.CheckStatus</td>
                            <td>NT$ @item.Sum</td>
                            <td>@item.FormattedAddTime</td>
                            <td>@item.FormattedUpdateTime</td>
                            <td><img src="~/Images/edit.png" style="display:block; width:18px; cursor:pointer;" /></td>

                        </tr>
                        }
                    }
                </table>

            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.box-body -->

    <div class="box-footer">
        @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
    </div>
</div>

