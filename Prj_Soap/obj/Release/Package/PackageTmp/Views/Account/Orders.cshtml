
@using PagedList
@using PagedList.Mvc
@model IPagedList<Prj_Soap.Models.ViewModels.OrderHistoryViewModel>
@Html.Partial("_AccountMenu")

<section id="page-content" class="content-single-sidebar three-col-product" style="margin-right:0; margin-left:40px;">
    <div class="clear"></div>
    <div class="account-info-div">
        <table class="table table-hover">
            <tr>
                <th style="width:25%;">訂單編號</th>
                <th style="width:10%;">運送狀態</th>
                <th style="width:15%">金額</th>
                <th style="width:20%;">訂單日期</th>
                <th style="width:20%;">最後更新</th>
            </tr>
            @if (Model.Count() == 0)
            {
                <tr>
                    <td colspan="4">無資料</td>
                </tr>
            }
            else
            {
                foreach (var item in Model)
                {

                    <tr>

                        <td><a href="#">@item.OrderId</a></td>
                        <td>@item.CheckStatus</td>
                        <td>NT$ @item.Sum</td>
                        <td>@item.FormattedAddTime</td>
                        <td>@item.FormattedUpdateTime</td>
                    </tr>

                }
            }
        </table>
        @Html.PagedListPager(Model, page => Url.Action("Orders", new { page }))
    </div>


</section>

@section scripts{
    <script>


    </script>
}